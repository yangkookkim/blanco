<p id="search_employees_title">
	Search employees
</p>
<%= form_tag({:action => "search_employees"}, :method => :get) do %>
	<%= text_field_tag :search_string %>
	<%= submit_tag 'search' %>
<% end %>

<div id="search_result">
	<% if @employees_matched %>
		<% @employees_matched.each do |e| %>
			<%= e.name%><br />
		<% end %>
	<% end %>
</div><!-- /search_result>
