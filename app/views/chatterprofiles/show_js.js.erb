$(function(){
    $(".submit_comment_feed_button").live("click", function(){
        var employee_id = <%= @employee.id %>;
        var feed_id = $(this).attr("name");
        var feed_comment = $(".feed_comment_form_textarea[name=" + feed_id + "]").val();
        $.get("post_feed_comment", {feed_id:feed_id, feed_comment:feed_comment, employee_id:employee_id},
            function(comment){
                $(".feed_comments[name=" + feed_id + "]").append(comment);
                $(".feed_comment_form_textarea[name=" + feed_id + "]").val("");
        });
    });
});

$(function(){
    $("#submit_status_update_button").live("click", function(){
        var employee_id = <%= @employee.id %>;
        var resource_id = "<%= escape_javascript(@resource_id) %>";
        var text = $("#status_update_form_textarea").val();
        $.get("update_status", {text:text, resource_id:resource_id},
            function(post){
                $("#feed_content_area").prepend(post);
                $("#status_update_form_textarea").val("");
        });
    });
});

$(function(){
    $(".delete_feed_button").live("click", function(){
        var feed_id = $(this).attr("name");
        $.get("delete_feed", {feed_id:feed_id},
            function(post){
            $(".feed[name="+ feed_id + "]").remove();
        });
    });
});

$(function(){
    $(".delete_comment_button").live("click", function(){
        var comment_id = $(this).attr("name");
        $.get("delete_comment", {comment_id:comment_id},
            function(post){
            $(".feed_comment[name="+ comment_id + "]").remove();
        });
    });
});
