<div class="each_restaurant" name=<%=each_restaurant.id %>>
    <div class="each_restaurant_info">
        <div class="each_restaurant_name">
          <%= each_restaurant.name %>
	  <div class="rating_readonly" readonly_score=<%=each_restaurant.rating %>></div>
        </div>
        <div class="each_restaurant_image">
          <%= image_tag each_restaurant.image_url(:thumb), :align => "top" if each_restaurant.image? %>
        </div>
    </div>
    <div class="each_restaurant_review_area">
        <% if each_restaurant.posts.empty? %>
        No one visted this place yet<br>
        <% else %>
            <div class="each_restaurant_review_header">Following people visited this place</div>
            <div class="numberofposts"><%= each_restaurant.posts.size %></div>
            <div class="button" name="left">left</div>
            <div class="button" name="right">right</div>
            <table class="animation_test">
                <tr>
                    <% each_restaurant.posts.each_with_index do |post, i| %>
                <td class="each_restaurant_review" name=<%= post.id %>>
                    <div class="each_restaurant_review_image" name=<%= each_restaurant.id %>>
                      <% if i == 0 %>
                      <%= image_tag(post.employee.icon_url(:thumb), :style => "border-style: solid; border-width: 2px; border-color:#498BF4;") if post.employee.icon? %>
                      <% else %>
                      <%= image_tag(post.employee.icon_url(:thumb)) if post.employee.icon? %>
                      <% end %>
                    </div>
                </td>
                    <% end %>
                </tr>
            </table>
            <div class=<%= "comment_display_area#{each_restaurant.id}"%> >
              <%= each_restaurant.posts.first.message %>
            </div>
        <% end %>
        <div class="new_post">
          <textarea id="input" rows="4" cols="30"></textarea>
        </div>
        Your rating: <div class="rating"></div>
        <div class="submit_restaurant_post_button">
          <input type="image" src="/assets/submit_button_en.png"/>
        </div>
    </div>
</div>
